@{
    ViewBag.Title = "Home Page";
}

<!-- Icon Cards-->
<div class="row">
    <div  class="col-md-12"  style="margin: 2px;">
        <div class="card text-white bg-primary o-hidden h-100">
            <div class="card-body">
                <div class="card-body-icon">
                    <i class="fas fa-fw fa-comments"></i>
                </div>
                <div class="mr-5">Update Your Personal Details</div>
            </div>
            <a class="card-footer text-white clearfix small z-1" href="#">
                <span class="float-left">View Details</span>
                <span class="float-right">
                    <i class="fas fa-angle-right"></i>
                </span>
            </a>
        </div>
    </div>
    <br/>
    <div class="col-md-12" style="margin: 2px;">
        <div class="card text-white bg-warning o-hidden h-100">
            <div class="card-body">
                <div class="card-body-icon">
                    <i class="fas fa-fw fa-list"></i>
                </div>
                <div class="mr-5">Make Book(s) Donation</div>
            </div>
            <a class="card-footer text-white clearfix small z-1" href="@Url.Action("Create","BookDonations")">
                <span class="float-left">View Details</span>
                <span class="float-right">
                    <i class="fas fa-angle-right"></i>
                </span>
            </a>
        </div>
    </div>
    <br/>
    <div  class="col-md-12" style="margin: 2px;">
        <div class="card text-white bg-success o-hidden h-100">
            <div class="card-body">
                <div class="card-body-icon">
                    <i class="fas fa-fw fa-shopping-cart"></i>
                </div>
                <div class="mr-5">Make a Stationary Donation</div>
            </div>
            <a class="card-footer text-white clearfix small z-1" href="@Url.Action("Create","StationaryDonations")">
                <span class="float-left">View Details</span>
                <span class="float-right">
                    <i class="fas fa-angle-right"></i>
                </span>
            </a>
        </div>
    </div>
