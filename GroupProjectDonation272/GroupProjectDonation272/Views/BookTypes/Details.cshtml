@model SDG_Education.ViewModels.DetailsBookTypeViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>BookType</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.BookType.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BookType.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.BookType.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BookType.Description)
        </dd>

    </dl>
</div>
<br />

@if (Model.Books.Count == 0)
{   
    <p class="lead">
        @Model.BookType.Name has no books associated with it
    </p>
}
else
{
    <table class="table">
        <tr>
           
            <th>
                @Html.DisplayNameFor(model => model.Book.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book.Edition)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book.Publisher)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book.Year)
            </th>
            @*<th></th>*@
        </tr>

        @foreach (var item in Model.Books)
        {
            <tr>
                
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Edition)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Publisher)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Year)
                </td>
                @*<td>
                        @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id=item.Id })
                    </td>*@
            </tr>
        }

    </table>
}

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.BookType.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
