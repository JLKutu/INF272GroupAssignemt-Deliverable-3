@model IEnumerable<GroupProjectDonation272.Models.Core.Sponsor>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-xl-3 col-sm-6 mb-3">
        <a class="text-white clearfix small z-1" href="@Url.Action("Create","Sponsors")">
            <div class="card text-white bg-primary o-hidden h-100">
                <div class="card-body">
                    <div class="card-body-icon">

                        <i class="fas fa-fw fa-plus-circle"></i>

                    </div>
                    <div class="mr-5">Add New Sponsor</div>
                </div>

            </div>
        </a>

    </div>
    <div class="col-xl-3 col-sm-6 mb-3">
        <a class="text-white clearfix small z-1" href="@Url.Action("Index","SponsorTypes")">
            <div class="card text-white bg-warning o-hidden h-100">
                <div class="card-body">
                    <div class="card-body-icon">
                        <i class="fas fa-fw fa-archive"></i>
                    </div>
                    <div class="mr-5">Manage Sponsor Categories</div>
                </div>

            </div>
        </a>
    </div>
</div>

<div class="card-body">
    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>
                       Sponsor Type
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ContactNo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address)
                    </th>
                    <th>Action</th>
                </tr>
                </thead>
            <tbody>
            @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.SponsorType.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ContactNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }
                </tbody>
        </table>
    </div>
</div>
